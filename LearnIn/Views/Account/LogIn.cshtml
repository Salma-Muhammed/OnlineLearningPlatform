@model ApplicationUser;

<div class="login-form-container">
    <h2>Welcome Back!</h2>
    <form method="post" asp-action="LogIn">
        <div class="form-group">
            <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" name="Password" class="form-control" />
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>

    @if (ViewBag.Status == 1)
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }

   @*  <div class="text-center my-3">or</div>
    <button type="button" id="btn-sign_with_social">Continue with Google</button>
    <button type="button" id="btn-sign_with_social">Continue with Facebook</button> *@

    <!-- Already has an account link -->
    <div class="text-center mt-3">
        <a href="/Account/SignUp">New to LearnIn?</a>
    </div>
</div>


<style>
    .login-form-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: mintcream;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-form-container h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        height: 40px;
        border-radius: 15px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        border-radius: 15px;
        background-color: #298EE5;
        font-weight: bold;
    }

    .alert-danger {
        margin-top: 20px;
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    #btn-sign_with_social {
        width: 100%;
        border-radius: 15px;
        height: 50px;
        margin-top: 10px;
        font-weight: bold;
    }

    #btn-sign_with_social:hover {
        background-color: lightblue;
    }
</style>
