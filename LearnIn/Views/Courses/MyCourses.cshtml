@model IEnumerable<LearnIn.Models.Course>

<h2>My Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@course.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
