@model IEnumerable<LearnIn.Models.Course>

<h1>My Courses</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Duration</th>
                <th>Topics</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Category</td>
                    <td>@course.Duration hours</td>
                    <td>
                        <ul>
                            @foreach (var topic in course.Topics)
                            {
                                <li>@topic.Name</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No courses found.</p>
}
